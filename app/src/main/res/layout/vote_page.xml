<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Poll_title"
            android:id="@+id/vote_title"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Poll Description"
            android:id="@+id/vote_description"
            android:textAlignment="center"
            android:padding="20dp"
            android:textSize="20sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="32"
            android:textAlignment="center"
            android:id="@+id/positive"
            />

        <ImageView
            android:id="@+id/positive_button"
            android:layout_width="165dp"
            android:layout_height="137dp"
            android:layout_margin="2dp"
            android:contentDescription="up_vote"
            android:src="@drawable/up_vote" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="32"
            android:textAlignment="center"
            android:id="@+id/negative"
            />

        <ImageView
            android:id="@+id/negative_button"
            android:layout_width="159dp"
            android:layout_height="146dp"
            android:contentDescription="down_vote"
            android:src="@drawable/down_vote_foreground" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Duration"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:id="@+id/duration"
        android:paddingBottom="15dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time Remaining"
        android:layout_above="@id/duration"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:id="@+id/duration_label"
        />
</RelativeLayout>